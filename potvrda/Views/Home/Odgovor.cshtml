@model OdgovoriRoditelja

<div class="bg-primary p-2 text-white text-center">
    <h2>Prijava prisustva</h2>
</div>

<form asp-action="Odgovor" method="post" class="m-4">
    <div class="form-group">
        <label>Ime vašeg deteta</label>
        <input asp-for="ImeDeteta" class="form-control" />
        <span asp-validation-for="ImeDeteta"></span>
    </div>
    <div class="form-group">
        <label>Vaše ime</label>
        <input asp-for="ImeRoditelja" class="form-control" />
        <span asp-validation-for="ImeRoditelja"></span>
    </div>
    <div class="form-group">
        <label>Vaša e-mail adresa</label>
        <input asp-for="Email" class="form-control" />        
    </div>
    <div class="form-group">
        <label>Vaš broj telefona</label>
        <input asp-for="Telefon" class="form-control" />
    </div>
    <div class="form-group">
        <label>Jeste li član naše Viber grupe?</label>
        <select asp-for="Viber" class="form-control">
            <option value="">Izaberite opciju</option>
            <option value="true">Da, jesam</option>
            <option value="false">Ne, nemam viber</option>
        </select>
    </div>
    <div class="form-group">
        <label>Da li će vaše dete doći na akciju?</label>
        <select asp-for="PotvrdaDolaska " class="form-control">
            <option value="">Izaberite opciju</option>
            <option value="true">Da, doći će</option>
            <option value="false">Ne, neće moći prisustvovati</option>
        </select>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Pošalji odgovor</button>
    </div>
</form>
